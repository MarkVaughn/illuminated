{
    "name": "chromabits/laravel-helpers",
    "description": "Some Laravel 5 helpers",
    "require": {
        "laravel/framework": "~5.0",
        "tijsverkoyen/css-to-inline-styles": "~1.5",
        "chromabits/nucleus": "dev-master"
    },
    "authors": [
        {
            "name": "Eduardo Trujillo",
            "email": "ed@chromabits.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Chromabits\\Illuminated\\": "src/Chromabits/Illuminated"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\Chromabits\\Illuminated\\": "tests/Chromabits/Illuminated",
            "Tests\\Chromabits\\Support\\": "tests/Chromabits/Support"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "~4.6@dev",
        "mockery/mockery": "0.9.*@dev"
    }
}
